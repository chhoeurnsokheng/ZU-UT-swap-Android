<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_15"
        android:paddingHorizontal="@dimen/dimen_15">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_35"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_angles_left_regular"

                app:tint="@color/color_main" />

            <RelativeLayout
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/iv_back"
                android:alpha="0.8"
                android:background="@drawable/bg_circular"
                android:backgroundTint="@color/gray"
                android:paddingHorizontal="@dimen/dimen_10">

                <ImageButton
                    android:id="@+id/icon_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_magnifying_glass"
                    android:backgroundTint="@color/color_main" />

                <ImageButton
                    android:id="@+id/btn_clear"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_xmark_regular"
                    android:backgroundTint="@color/color_main"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/ed_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/dimen_10"
                    android:layout_toLeftOf="@id/btn_clear"
                    android:layout_toRightOf="@id/icon_search"
                    android:background="@null"
                    android:hint="Search All Function in Apps"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:textAppearance="@style/regular_16"
                    android:textColor="@color/color_main" />
            </RelativeLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_15">
                <LinearLayout
                    android:id="@+id/lay_default"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:layout_marginBottom="@dimen/dimen_10"/>
                    <View
                        android:background="?android:attr/listDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/dimen_10"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lasted History"
                        android:textAppearance="@style/medium_16"
                        android:layout_marginBottom="@dimen/dimen_15"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_15">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/gray"
                                app:cardCornerRadius="@dimen/dimen_5"
                                app:cardElevation="0dp"
                                android:layout_marginRight="@dimen/dimen_8">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_8">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/chart_grap_up"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="UT Siem Reap 17140"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Topic : Trading Market"
                                        android:textSize="@dimen/font_size_10"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Price : $1.50 (+200.00%)"
                                        android:textSize="@dimen/font_size_12"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/gray"
                                app:cardCornerRadius="@dimen/dimen_5"
                                app:cardElevation="0dp"
                                android:layout_marginLeft="@dimen/dimen_8">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_8">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/popular_1"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Techo Internation Airport"
                                        android:layout_marginVertical="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Topic : News"
                                        android:textSize="@dimen/font_size_10"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Has so far raised in total USD 97 Milion found from several"
                                        android:textSize="@dimen/font_size_12"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_15">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/gray"
                                app:cardCornerRadius="@dimen/dimen_5"
                                app:cardElevation="0dp"
                                android:layout_marginRight="@dimen/dimen_8">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_8">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/chart_grap_down"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="UT Siem Reap 17140"
                                        android:layout_marginVertical="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Topic : Trading Market"
                                        android:textSize="@dimen/font_size_10"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Price : $1.50 (-200.00%)"
                                        android:textSize="@dimen/font_size_12"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/gray"
                                app:cardCornerRadius="@dimen/dimen_5"
                                app:cardElevation="0dp"
                                android:layout_marginLeft="@dimen/dimen_8">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_8">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/image_two"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="UT Siem Reap 17140"
                                        android:layout_marginVertical="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Topic : Project Information"
                                        android:textSize="@dimen/font_size_10"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Bast Price: $1.50, Target Price $1.50"
                                        android:textSize="@dimen/font_size_12"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/gray"
                                app:cardCornerRadius="@dimen/dimen_5"
                                app:cardElevation="0dp"
                                android:layout_marginRight="@dimen/dimen_8">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_8">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/chart_grap_up"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="UT Siem Reap 17140"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Topic : Trading Market"
                                        android:textSize="@dimen/font_size_10"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Price : $1.50 (+200.00%)"
                                        android:textSize="@dimen/font_size_12"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/gray"
                                app:cardCornerRadius="@dimen/dimen_5"
                                app:cardElevation="0dp"
                                android:layout_marginLeft="@dimen/dimen_8">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_8">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/popular_1"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Techo Internation Airport"
                                        android:layout_marginVertical="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Topic : News"
                                        android:textSize="@dimen/font_size_10"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Has so far raised in total USD 97 Milion found from several"
                                        android:textSize="@dimen/font_size_12"
                                        android:layout_marginBottom="@dimen/dimen_2"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trading Market"
                        android:textAppearance="@style/medium_16"
                        android:layout_marginBottom="@dimen/dimen_5"/>
                    <include layout="@layout/item_list_trade"/>
                    <include layout="@layout/item_list_trade"/>
                    <include layout="@layout/item_list_navbar_trade_down"/>
                    <View
                        android:background="?android:attr/listDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/dimen_10"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Project Information"
                        android:textAppearance="@style/medium_16"
                        android:layout_marginBottom="@dimen/dimen_5"/>
                    <include layout="@layout/item_list_navbar_project"/>
                    <include layout="@layout/item_list_navbar_project"/>
                    <include layout="@layout/item_list_navbar_project"/>
                    <View
                        android:background="?android:attr/listDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/dimen_10"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="News"
                        android:textAppearance="@style/medium_16"
                        android:layout_marginBottom="@dimen/dimen_5"/>
                    <include layout="@layout/item_list_system_news_horizontal"/>
                    <include layout="@layout/item_list_system_news_horizontal"/>
                    <include layout="@layout/item_list_system_news_horizontal"/>
                    <View
                        android:background="?android:attr/listDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/dimen_10"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="System"
                        android:textAppearance="@style/medium_16"
                        android:layout_marginBottom="@dimen/dimen_5"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_settings"
                        android:listSelector="@color/transparent"
                        tools:listitem="@layout/item_list_setting_menu"
                        android:divider="@color/transparent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
