<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_blur_bg_dialog_balance">


        <LinearLayout
            android:layout_width="@dimen/dimen_350"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/close_image"
                android:layout_width="@dimen/dimen_26"
                android:layout_height="@dimen/dimen_26"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dimen_100"
                android:layout_marginBottom="@dimen/dimen_30"
                android:src="@drawable/ic_sharp_close_24"
                android:visibility="gone"
                app:tint="@color/white" />

            <LinearLayout
                android:id="@+id/balance_dialog_box"
                android:layout_width="@dimen/dimen_350"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_balance_dialog"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dimen_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="80"
                            android:text="UT Kampot"
                            android:textAppearance="@style/medium_18"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="20">

                            <ImageView
                                android:id="@+id/iv_lock"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:layout_gravity="end"
                                android:layout_weight="20"
                                android:scaleType="fitEnd"
                                android:src="@drawable/ic_locked" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="@string/buy_back"
                        android:textAppearance="@style/medium_12"
                        android:textColor="@color/dark_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginVertical="@dimen/dimen_20"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="@string/status"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/black_333333" />

                        <TextView
                            android:id="@+id/tv_lock"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:gravity="end"
                            android:text="Locked"
                            android:textAppearance="@style/medium_12"
                            android:textColor="@color/danger" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="@string/amount"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/black_333333" />

                        <LinearLayout
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textAppearance="@style/medium_12"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/txt_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="400.00"
                                android:textAppearance="@style/medium_12"
                                android:textColor="@color/black" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="@string/start"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/black_333333" />

                        <LinearLayout
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02-May-2022"
                                android:textAppearance="@style/medium_12"
                                android:textColor="@color/black_333333" />

                                    <TextView
                                        android:id="@+id/hour_start"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/medium_12"
                                        android:text=" 09:00:00"
                                        android:visibility="gone"
                                        android:textColor="@color/black_333333"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="@string/end"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/black_333333" />

                        <LinearLayout
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02-June-2022"
                                android:textAppearance="@style/medium_12"
                                android:textColor="@color/black_333333" />

                            <TextView
                                android:id="@+id/hour_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 09:00:00"
                                android:textAppearance="@style/medium_12"
                                android:textColor="@color/black_333333"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:text="@string/dates_remaining"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/black_333333" />

                        <TextView
                            android:id="@+id/txt_duration"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:gravity="end"
                            android:text="30 Day(s)"
                            android:textAppearance="@style/medium_12"
                            android:textColor="@color/black_333333" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </eightbitlab.com.blurview.BlurView>
</layout>