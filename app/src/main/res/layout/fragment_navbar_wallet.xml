                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/white"
                    android:src="@drawable/project_user"
                    app:shapeAppearanceOverlay="@style/circular"
                    app:strokeColor="@color/secondary"
                    app:strokeWidth="0.2dp" />
                <TextView
                    android:id="@+id/txt_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UT Swap Account"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/btn_setting"
                    android:layout_toRightOf="@id/iv_profile"
                    android:layout_marginBottom="2dp"
                    android:paddingHorizontal="@dimen/dimen_15"/>
                <LinearLayout
                    android:id="@+id/lay_qrcode"
                    android:layout_toRightOf="@id/iv_profile"
                    android:layout_below="@id/txt_account"
                    android:layout_toLeftOf="@id/btn_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dimen_15"
                    android:layout_marginBottom="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Profile QR Code : "/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_qrcode_regular"
                        android:background="@null"
                        app:tint="@color/secondary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/lay_qrcode"
                    android:layout_toRightOf="@id/iv_profile"
                    android:layout_toLeftOf="@id/btn_verify"
                    android:paddingHorizontal="@dimen/dimen_15"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_account_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UT Standard"
                        android:textSize="10sp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="@color/success"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/btn_setting"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_gear_regular"
                    android:clickable="true"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    app:tint="@color/secondary" />
                <LinearLayout
                    android:id="@+id/btn_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="@color/success"
                    android:paddingHorizontal="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/btn_setting"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:paddingVertical="3dp">
                    <ImageView
                        android:id="@+id/icon_verify"
                        android:layout_width="@dimen/dimen_18"
                        android:layout_height="@dimen/dimen_18"
                        android:src="@drawable/ic_badge_check"
                        app:tint="@color/white"/>
                    <TextView
                        android:id="@+id/txt_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:textSize="@dimen/font_size_12"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/dimen_2"
                        />

                </LinearLayout>
