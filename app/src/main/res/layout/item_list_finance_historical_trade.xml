<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/lay_historical_trade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title_trade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pochentong 555"
            android:textAppearance="@style/medium_14"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_ut_amount_trade"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="268 000 UT"
                android:textAppearance="@style/regular_12"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_open_amount"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="$33.99"
                android:textAppearance="@style/regular_12"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_close_amount"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="$33.99"
                android:textAppearance="@style/regular_12"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_high_amount"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="$33.99"
                android:textAppearance="@style/regular_12"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_low_amount"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="$33.99"
                android:textAppearance="@style/regular_12"
                android:textColor="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/light_gray" />

    </LinearLayout>

</layout>