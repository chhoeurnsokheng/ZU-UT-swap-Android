<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="Please login and verify your account"/>

        <ScrollView
            android:id="@+id/linearLayout_portfolio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="visible"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_18"
                android:paddingHorizontal="@dimen/dimen_20"
                android:paddingBottom="@dimen/dimen_30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/portfolio"
                    android:textColor="@color/dark_gray"
                    android:textAppearance="@style/regular_12"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_main"
                        android:textAppearance="@style/medium_28"
                        android:text="$ 127 910.62"/>

                    <ImageView
                        android:id="@+id/img_visibility"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center"
                        app:tint="@color/dark_gray"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_baseline_visibility_off_24"/>

                </LinearLayout>

<!--                <WebView-->
<!--                    android:id="@+id/web_view"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="196dp"-->
<!--                    android:layout_marginTop="@dimen/dimen_10"-->
<!--                    tools:ignore="WebViewLayout" />-->

                <com.anychart.AnyChartView
                    android:id="@+id/any_chart_view_pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:layout_marginTop="@dimen/dimen_10"
                    />

                <RelativeLayout
                    android:id="@+id/lay_filter"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_circular"

                    android:layout_marginTop="@dimen/dimen_10">
                    <TextView
                        android:id="@+id/btn_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/performance"
                        android:textAppearance="@style/regular_18"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:layout_width="@dimen/dimen_18"
                        android:layout_height="@dimen/dimen_18"
                        android:src="@drawable/ic_baseline_filter_list_24"
                        app:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dimen_20"/>

                </RelativeLayout>

<!--                <com.google.android.material.button.MaterialButton-->
<!--                    android:id="@+id/btn_filter"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="42dp"-->
<!--                    android:background="@drawable/bg_circular"-->
<!--                    android:layout_marginTop="@dimen/dimen_10"-->
<!--                    android:paddingStart="@dimen/dimen_50"-->
<!--                    android:hint="@string/performance"-->
<!--                    app:paddingEnd="@dimen/dimen_20"-->
<!--                    android:drawableEnd="@drawable/ic_baseline_filter_list_24"-->
<!--                    app:drawableTint="@color/white"-->
<!--                    android:textAppearance="@style/regular_18"-->
<!--                    android:textColorHint="@color/white" />-->

                <LinearLayout
                    android:id="@+id/linearLayout_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/asset"
                        android:layout_weight="1"
                        android:textColor="@color/dark_gray"
                        android:paddingVertical="@dimen/dimen_8"
                        android:textAppearance="@style/regular_12"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/buy_dollar"
                            android:textColor="@color/dark_gray"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:paddingVertical="@dimen/dimen_8"
                            android:textAppearance="@style/regular_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mkt_dollar"
                            android:paddingVertical="@dimen/dimen_8"
                            android:textColor="@color/dark_gray"
                            android:textAppearance="@style/regular_12"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_performance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asset"
                        android:textColor="@color/dark_gray"
                        android:textAppearance="@style/regular_12"/>

                    <LinearLayout
                        android:id="@+id/lay_sort_performance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dimen_8"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/txt_performance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/performance"
                            android:textColor="@color/dark_gray"
                            android:textAppearance="@style/regular_12"/>

                        <ImageView
                            android:id="@+id/img_sort_performance"
                            android:layout_width="@dimen/dimen_10"
                            android:layout_height="@dimen/dimen_10"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dimen_2"
                            android:src="@drawable/ic_sort_arrow_up_down"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asset"
                        android:textColor="@color/dark_gray"
                        android:textAppearance="@style/regular_12"/>

                    <LinearLayout
                        android:id="@+id/lay_sort_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dimen_8"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/txt_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/change"
                            android:textColor="@color/dark_gray"
                            android:textAppearance="@style/regular_12"/>

                        <ImageView
                            android:id="@+id/img_sort_change"
                            android:layout_width="@dimen/dimen_10"
                            android:layout_height="@dimen/dimen_10"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dimen_2"
                            android:src="@drawable/ic_sort_arrow_up_down"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asset"
                        android:textColor="@color/dark_gray"
                        android:textAppearance="@style/regular_12"/>

                    <LinearLayout
                        android:id="@+id/lay_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dimen_8"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/txt_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/weight"
                            android:textColor="@color/dark_gray"
                            android:textAppearance="@style/regular_12"/>

                        <ImageView
                            android:id="@+id/img_sort_weight"
                            android:layout_width="@dimen/dimen_10"
                            android:layout_height="@dimen/dimen_10"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dimen_2"
                            android:src="@drawable/ic_sort_arrow_up_down"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asset"
                        android:textColor="@color/dark_gray"
                        android:textAppearance="@style/regular_12"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_8"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volume_ut"
                            android:textColor="@color/dark_gray"
                            android:layout_marginEnd="@dimen/dimen_40"
                            android:textAppearance="@style/regular_12"/>

                        <LinearLayout
                            android:id="@+id/lay_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/txt_value_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/value_dollar"
                                android:textColor="@color/dark_gray"
                                android:textAppearance="@style/regular_12"/>

                            <ImageView
                                android:id="@+id/img_sort_balance"
                                android:layout_width="@dimen/dimen_10"
                                android:layout_height="@dimen/dimen_10"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_2"
                                android:src="@drawable/ic_sort_arrow_up_down"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trading_balance_cash"
                        android:textColor="@color/color_main"
                        android:textAppearance="@style/medium_14"/>

                    <TextView
                        android:id="@+id/txt_trading_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$6 420.99"
                        android:textColor="@color/black_333333"
                        android:textAppearance="@style/medium_14"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>