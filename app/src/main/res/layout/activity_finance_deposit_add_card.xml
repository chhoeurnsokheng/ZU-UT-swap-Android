<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_20">

        <RelativeLayout
            android:id="@+id/header_visaMasterCard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_addCard_back"
                android:layout_width="@dimen/dimen_18"
                android:layout_height="@dimen/dimen_18"
                android:layout_centerVertical="true"
                android:contentDescription="@string/menu"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/add_visa_or_master_card"
                android:textAppearance="@style/medium_21"
                android:textColor="@color/blur_0E1C6B"  />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_visaMasterCard_title"
            android:layout_marginTop="@dimen/dimen_40"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/card_number"
                android:inputType="number"
                android:maxLength="20"
                android:paddingBottom="@dimen/dimen_15"
                android:singleLine="true"
                android:textAppearance="@style/regular_16"
                android:textColorHint="@color/black_333333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_card_number"
                android:layout_marginTop="@dimen/dimen_40"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_date"
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="wrap_content"
                    android:hint="@string/expiry_date_hint"
                    android:inputType="date"
                    android:paddingBottom="@dimen/dimen_15"
                    android:singleLine="true"
                    android:textAppearance="@style/regular_16"
                    android:textColorHint="@color/black_333333" />

                <EditText
                    android:id="@+id/et_cvv"
                    android:layout_width="@dimen/dimen_150"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:hint="@string/cvv"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingBottom="@dimen/dimen_15"
                    android:singleLine="true"
                    android:textAppearance="@style/regular_16"
                    android:textColorHint="@color/black_333333" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_card_holderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40"
                android:hint="@string/cardholder_name"
                android:inputType="text"
                android:maxLength="25"
                android:paddingBottom="@dimen/dimen_15"
                android:singleLine="true"
                android:textAppearance="@style/regular_16"
                android:textColorHint="@color/black_333333" />

            <TextView
                android:id="@+id/txt_show_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_card_holderName"
                android:layout_marginTop="@dimen/dimen_50"
                android:background="@color/main_red"
                android:paddingVertical="@dimen/dimen_8"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/regular_14"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/btn_addCard_Confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:layout_marginTop="@dimen/dimen_80"
                android:background="@drawable/btn_deposit_add_card_condition"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textAppearance="@style/medium_16"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>