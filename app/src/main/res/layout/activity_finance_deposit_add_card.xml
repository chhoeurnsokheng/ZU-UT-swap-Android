<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/header_visaMasterCard_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_image"
                    android:layout_width="@dimen/dimen_64"
                    android:layout_height="@dimen/dimen_64"
                    android:padding="@dimen/dimen_16"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/color_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/add_visa_or_master_card"
                    android:textAppearance="@style/medium_21"
                    android:textColor="@color/color_main" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:paddingHorizontal="@dimen/dimen_20"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:hint="@string/card_number"
                    android:inputType="number"
                    android:maxLength="20"
                    android:paddingBottom="@dimen/dimen_15"
                    android:singleLine="true"
                    android:textAppearance="@style/regular_16"
                    android:textColorHint="@color/black_333333"
                    android:layout_marginBottom="@dimen/dimen_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dimen_20">

                    <EditText
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dimen_50"
                        android:hint="Expiry Date"
                        android:inputType="date"
                        android:paddingBottom="@dimen/dimen_15"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:textAppearance="@style/regular_16"
                        android:textColorHint="@color/black_333333"
                        android:layout_marginEnd="@dimen/dimen_30"/>

                    <EditText
                        android:id="@+id/et_cvv"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:hint="@string/cvv"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingBottom="@dimen/dimen_15"
                        android:singleLine="true"
                        android:textAppearance="@style/regular_16"
                        android:textColorHint="@color/black_333333" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_card_holderName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:hint="@string/cardholder_name"
                    android:inputType="text"
                    android:maxLength="25"
                    android:paddingBottom="@dimen/dimen_15"
                    android:singleLine="true"
                    android:textAppearance="@style/regular_16"
                    android:textColorHint="@color/black_333333" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_20"
                android:paddingBottom="@dimen/dimen_15">

                <LinearLayout
                    android:id="@+id/btn_addCard_Confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dimen_80"
                    android:background="@drawable/btn_deposit_add_card_condition"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/confirm"
                        android:textAppearance="@style/medium_16"
                        android:textColor="@color/white" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
</layout>