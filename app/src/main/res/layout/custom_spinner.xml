<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/custom_spinner_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/custom_spinner_icon"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_logo_payment_spinner"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:src="@drawable/aba_logo" />

            <TextView
                android:id="@+id/txt_payment_method_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aba_pay"
                android:textColor="@color/color_main"
                android:layout_gravity="center"
                android:paddingStart="@dimen/dimen_10"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <ImageView
            android:id="@+id/custom_spinner_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:src="@drawable/ic_baseline_arrow_drop_down_circle_24" />

    </RelativeLayout>
</layout>
