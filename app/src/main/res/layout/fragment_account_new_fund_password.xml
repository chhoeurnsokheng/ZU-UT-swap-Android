<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_fund_password"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edit_confirm_fund_password"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textColor="@color/white" />


        <RelativeLayout
            android:id="@+id/lay_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_50">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/dimen_64"
                android:layout_height="@dimen/dimen_64"
                android:layout_centerVertical="true"
                android:contentDescription="@string/menu"
                android:padding="@dimen/dimen_20"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/change_fund_password"
                android:textAlignment="center"
                android:textAppearance="@style/medium_21"
                android:textColor="@color/color_main" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_header"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/new_fund_password"
                android:textAppearance="@style/regular_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/number_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/text_view_1"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_2"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_3"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_4"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:src="@drawable/ic_baseline_visibility_off_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40"
                android:gravity="center"
                android:text="@string/confirm_new_fund_password"
                android:textAppearance="@style/regular_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/confirm_number_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/text_view_confirm_1"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_confirm_2"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_confirm_3"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_confirm_4"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textAppearance="@style/bold_22"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_show_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:src="@drawable/ic_baseline_visibility_off_24" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_30"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circular"
                    android:backgroundTint="@color/success"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/done"
                        android:textAppearance="@style/bold_18"
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>