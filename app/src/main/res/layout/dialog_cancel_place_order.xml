<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/dimen_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginHorizontal="@dimen/dimen_25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_32"
                android:layout_height="32dp"
                android:src="@drawable/ic_check"
                android:layout_marginBottom="@dimen/dimen_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/medium_16"
                android:textColor="@color/black_333333"
                android:text="@string/success"
                android:layout_marginBottom="@dimen/dimen_24"/>

            <TextView
                android:layout_width="@dimen/dimen_150"
                android:layout_height="wrap_content"
                android:textAppearance="@style/regular_12"
                android:gravity="center"
                android:textColor="@color/black_333333"
                android:text="@string/order_has_been_canceled"
                android:layout_marginBottom="@dimen/dimen_24"/>

            <TextView
                android:id="@+id/txt_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/medium_14"
                android:textColor="@color/primary"
                android:text="@string/ok"
                android:layout_marginBottom="@dimen/dimen_20"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>