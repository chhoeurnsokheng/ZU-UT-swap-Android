<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimen_12"
    android:layout_marginHorizontal="@dimen/dimen_8">

    <LinearLayout
        android:id="@+id/linear_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="@dimen/dimen_80"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/popular_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dimen_12">

            <TextView
                android:id="@+id/title_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Pochentong 555"
                android:textAppearance="@style/medium_14"
                android:textColor="@color/color_main" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="Flipping Strategy"
                android:textAppearance="@style/regular_10"
                android:textColor="@color/dark_gray" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="@dimen/dimen_66"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:text="Upcoming"
                    android:textAppearance="@style/medium_10"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/public_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8"
            android:paddingHorizontal="@dimen/dimen_10"
            android:singleLine="true"
            android:text="1-1-2022"
            android:visibility="gone"
            android:textAppearance="@style/medium_12"
            android:textColor="@color/color_main" />


    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

</LinearLayout>
</layout>

