<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.kyc.kycFragment.declarationScreen.DeclarationFragment">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:padding="@dimen/dimen_14"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/register_declaration_navbar_number"
                android:textAppearance="@style/regular_16"
                android:textColor="@color/dark_gray" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay_declaration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:layout_marginTop="@dimen/dimen_25"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/declaration"
                    android:textAppearance="@style/medium_18"
                    android:textColor="@color/color_main" />

                <CheckBox
                    android:id="@+id/cb_Declaration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:gravity="center"
                    android:textAppearance="@style/regular_12"
                    android:textColor="@color/secondary_text" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@color/light_gray" />

            <androidx.cardview.widget.CardView
                android:id="@+id/sv_Declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_25"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_5"
                android:elevation="@dimen/dimen_16"
                app:cardCornerRadius="@dimen/dimen_10">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:scrollbars="vertical|horizontal">

                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/content_loading"
                        android:textAppearance="@style/regular_12" />

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_eAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_declaration"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/e_agreement"
                    android:textAppearance="@style/medium_18"
                    android:textColor="@color/color_main" />

                <CheckBox
                    android:id="@+id/cb_eAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:gravity="center"
                    android:textAppearance="@style/regular_12"
                    android:textColor="@color/secondary_text" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView

                android:id="@+id/sv_eAgreement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_400"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_25"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_5"
                android:elevation="@dimen/dimen_16"
                app:cardCornerRadius="@dimen/dimen_10">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_400"
                    android:backgroundTint="@color/white"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:scrollbars="vertical|horizontal">

                    <TextView
                        android:id="@+id/txt_eAgreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract"
                        android:textAppearance="@style/regular_12" />

                </ScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@id/lay_eAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20">

            <LinearLayout
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_kyc_declaration"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/accept"
                    android:textAppearance="@style/medium_16"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>