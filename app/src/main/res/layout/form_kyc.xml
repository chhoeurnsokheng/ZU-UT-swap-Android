<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:drawableRight="@drawable/ic_star_error"
            android:drawablePadding="@dimen/dimen_12"
            android:hint="City/Province"
            android:padding="@dimen/dimen_4"
            android:singleLine="true"
            android:textAppearance="@style/regular_16"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16" />

        <ImageView
            android:id="@+id/image_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_17"
            android:paddingEnd="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_17"
            android:src="@drawable/ic_arrow_down" />
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/gray_light" />

    <LinearLayout
        android:id="@+id/layout_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_4"
            android:src="@drawable/ic_icon_loan_error" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_property_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ems="20"
            android:lines="1"
            android:singleLine="true"
            android:textAppearance="@style/regular_16"
            android:text="This field is required"
            android:textColor="@color/red_ee1111"
            android:textSize="@dimen/dimen_12" />
    </LinearLayout>
</LinearLayout>