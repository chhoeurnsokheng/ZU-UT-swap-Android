<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/avenirnextcyr_bold"
                android:gravity="center"
                android:text="@string/deposit"
                android:textColor="@color/color_main"
                android:textSize="@dimen/font_size_18" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dimen_15"
            android:paddingEnd="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_15"
            android:background="@drawable/card_view_whtie_border_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment_amount"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/color_main"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/amount"
                android:background="@drawable/bg_date"
                android:padding="@dimen/dimen_10"
                android:inputType="number"
                android:layout_marginTop="@dimen/dimen_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_18"
                    android:textColor="@color/color_main"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="@dimen/dimen_10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment_summary"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_18"
                android:layout_marginTop="@dimen/dimen_10"
                android:textColor="@color/color_main"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_10">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/dark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method"
                    android:textSize="@dimen/font_size_12"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/color_main"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_"
                    android:textSize="@dimen/font_size_12"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/color_main"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fee"
                    android:textSize="@dimen/font_size_12"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/color_main"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/dark"
                    android:layout_marginTop="@dimen/dimen_10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="@dimen/font_size_12"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/color_main"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_submit_deposit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/bg_date"
                android:backgroundTint="@color/color_main"
                android:layout_marginTop="@dimen/dimen_10"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/deposit"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen_40"
                    android:paddingEnd="@dimen/dimen_40"
                    android:textSize="@dimen/font_size_14"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>