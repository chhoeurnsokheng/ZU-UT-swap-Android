<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.setting.signInScreen.SigninActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_15"
        android:paddingEnd="@dimen/dimen_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main"
                android:layout_marginTop="@dimen/dimen_20"/>

            <ImageView
                android:id="@+id/img_ut_swap"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_ut_swap_logo_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textColor="@color/color_main"
                android:fontFamily="@font/avenirnextcyr_bold"
                android:textSize="@dimen/font_size_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_account_details"
                android:textColor="@color/color_main"
                android:fontFamily="@font/avenirnextcy_medium"
                android:layout_marginTop="@dimen/dimen_10"
                android:textSize="@dimen/font_size_18"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/outline_edittext_change_color_focus"
                android:gravity="center_vertical"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/email_or_phone_number"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tap_layout"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/outline_edittext_change_color_focus"
                android:gravity="center_vertical"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="13"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_tap_layout"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@drawable/outline_edittext_change_color_focus"
                    android:gravity="center_vertical"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Enter Code"
                        android:maxLength="13"/>

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/img_numeric_capcha"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:src="@drawable/code"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:adjustViewBounds="true"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_40">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_signIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/sign_in"
                    android:textColorHint="@color/white"
                    android:background="@drawable/bg_circular"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:fontFamily="@font/avenirnextcyr_bold"/>

                <TextView
                    android:id="@+id/btn_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Forgot Password?"
                    android:fontFamily="@font/avenirnextcy_regular"
                    android:layout_marginTop="@dimen/dimen_15"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Copyright 2022 Zillion United Co.,Ltd."
                android:textColor="@color/color_main"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_15"/>

        </LinearLayout>

    </RelativeLayout>

</layout>
