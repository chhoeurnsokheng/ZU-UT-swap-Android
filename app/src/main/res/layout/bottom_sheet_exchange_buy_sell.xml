<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/bottom_sheet_buy_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="110dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="@drawable/dialog_bg_bottom_sheet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_4"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bar"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_20"/>

                <LinearLayout
                    android:id="@+id/lay_buy_and_sell_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dimen_5"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:background="@color/white"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dimen_3"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_buy_bottom_sheet_click"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_48"
                            app:backgroundTint="@color/success"
                            android:background="@drawable/bg_circular"
                            android:hint="@string/buy"
                            android:textAppearance="@style/bold_16"
                            android:textColorHint="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginBottom="@dimen/dimen_6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avail_balance"
                                android:textColor="@color/black_333333"
                                android:textAppearance="@style/regular_10"
                                android:layout_marginEnd="@dimen/dimen_3"/>
                            <TextView
                                android:id="@+id/txt_available_click"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle=""
                                android:textColor="@color/black_333333"
                                android:textAppearance="@style/regular_10"
                                android:text="$0.00" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimen_3"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_sell_bottom_sheet_click"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_48"
                            android:background="@drawable/bg_circular"
                            app:backgroundTint="@color/danger"
                            android:hint="@string/sell"
                            android:textAppearance="@style/bold_16"
                            android:textColorHint="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginBottom="@dimen/dimen_6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_333333"
                                android:textAppearance="@style/regular_10"
                                android:text="@string/ut_"
                                android:layout_marginEnd="@dimen/dimen_3"/>
                            <TextView
                                android:id="@+id/txt_ut_click"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_333333"
                                android:textAppearance="@style/regular_10"
                                android:text="0" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:layout_marginBottom="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/btn_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_31"
                            android:layout_marginEnd="@dimen/dimen_8"
                            android:paddingHorizontal="@dimen/dimen_20"
                            android:background="@drawable/bg_circular">

                            <TextView
                                android:id="@+id/txt_limit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/limit"
                                android:textColor="@color/white"
                                android:textAppearance="@style/regular_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_market"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_31"
                            android:layout_marginEnd="@dimen/dimen_8"
                            android:paddingHorizontal="@dimen/dimen_20"
                            android:backgroundTint="@color/gray"
                            android:background="@drawable/bg_circular">

                            <TextView
                                android:id="@+id/txt_market"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/market"
                                android:textColor="@color/primary"
                                android:textAppearance="@style/regular_12"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_31"
                            android:layout_marginEnd="@dimen/dimen_8"
                            android:paddingHorizontal="@dimen/dimen_20"
                            android:backgroundTint="@color/gray_EEEEEE"
                            android:background="@drawable/bg_circular">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Conditional"
                                android:textColor="@color/light_gray"
                                android:textAppearance="@style/regular_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_31"
                            android:layout_marginEnd="@dimen/dimen_8"
                            android:paddingHorizontal="@dimen/dimen_20"
                            android:backgroundTint="@color/gray_EEEEEE"
                            android:background="@drawable/bg_circular">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Loss"
                                android:textColor="@color/light_gray"
                                android:textAppearance="@style/regular_12" />
                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dimen_16">

                    <TextView
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="wrap_content"
                        android:text="@string/volume"
                        android:textColor="@color/dark_gray"
                        android:textAppearance="@style/regular_12"/>

                    <EditText
                        android:id="@+id/et_volume"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_36"
                        android:inputType="number"
                        android:textColor="@color/black_222222"
                        android:textAppearance="@style/medium_16"
                        android:paddingEnd="@dimen/dimen_15"
                        android:textAlignment="textEnd"
                        android:background="@drawable/outline_edittext_change_color_focus"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dimen_16">

                    <TextView
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/dark_gray"
                        android:textAppearance="@style/regular_12"/>

                    <EditText
                        android:id="@+id/et_price_of_volume"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_36"
                        android:inputType="number"
                        android:textAppearance="@style/medium_16"
                        android:paddingEnd="@dimen/dimen_15"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black_222222"
                        android:visibility="visible"
                        android:background="@drawable/outline_edittext_change_color_focus"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_buy_and_sell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dimen_8"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/dimen_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dimen_3"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_buy_bottom_sheet"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_48"
                            app:backgroundTint="@color/success"
                            android:background="@drawable/bg_circular"
                            android:hint="@string/buy"
                            android:textAppearance="@style/bold_16"
                            android:textColorHint="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginBottom="@dimen/dimen_6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_3"
                                android:text="@string/avail_balance"
                                android:textAppearance="@style/regular_10"
                                android:textColor="@color/black_333333" />

                            <TextView
                                android:id="@+id/txt_available"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textAppearance="@style/regular_10"
                                android:textColor="@color/black_333333"
                                android:textStyle="" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimen_3"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_sell_bottom_sheet"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_48"
                            android:background="@drawable/bg_circular"
                            app:backgroundTint="@color/danger"
                            android:hint="@string/sell"
                            android:textAppearance="@style/bold_16"
                            android:textColorHint="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginBottom="@dimen/dimen_6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_333333"
                                android:textAppearance="@style/regular_10"
                                android:text="@string/ut_"
                                android:layout_marginEnd="@dimen/dimen_3"/>
                            <TextView
                                android:id="@+id/txt_ut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_333333"
                                android:textAppearance="@style/regular_10"
                                android:text="0" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
