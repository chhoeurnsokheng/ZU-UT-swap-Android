<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/custom_spinner_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/custom_spinner_icon"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_18"
            android:paddingBottom="@dimen/dimen_10">

            <TextView
                android:id="@+id/txt_name_ut_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="@dimen/dimen_10"
                android:text="@string/aba_pay"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>

        <ImageView
            android:id="@+id/custom_spinner_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dimen_16"
            android:src="@drawable/ic_baseline_arrow_drop_down_circle_24"
            app:tint="@color/secondary_text" />

    </RelativeLayout>
</layout>