<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/lay_all_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_date_all_trans"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:text="02-June-2022"
            android:textAppearance="@style/regular_12"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_volume_all_trans"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="17.5"
            android:gravity="end"
            android:text="7"
            android:textAppearance="@style/regular_12"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_price_all_trans"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="17.5"
            android:gravity="end"
            android:text="$3.97"
            android:textAppearance="@style/regular_12"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_gross_all_trans"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="end"
            android:text="$27.00"
            android:textAppearance="@style/regular_12"
            android:textColor="@color/black" />

    </LinearLayout>

</layout>