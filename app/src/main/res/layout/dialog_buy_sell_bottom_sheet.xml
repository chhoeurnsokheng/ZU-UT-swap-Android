<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="@drawable/dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_2"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_4"
                android:layout_gravity="center"
                android:background="@drawable/btn_bar" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:layout_marginTop="@dimen/dimen_20"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_limit"
                        android:layout_width="90dp"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:background="@drawable/bg_circular">

                        <TextView
                            android:id="@+id/txt_limit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Limit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_market"
                        android:layout_width="90dp"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:backgroundTint="@color/gray"
                        android:background="@drawable/bg_circular">

                        <TextView
                            android:id="@+id/txt_market"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Market"
                            android:textColor="@color/color_main"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:backgroundTint="@color/gray"
                        android:background="@drawable/bg_circular">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Conditional"
                            android:textColor="@color/thirst_text"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:backgroundTint="@color/gray"
                        android:background="@drawable/bg_circular">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Loss"
                            android:textColor="@color/thirst_text"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/font_size_18"/>

                <EditText
                    android:id="@+id/et_volume"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:inputType="number"
                    android:textSize="@dimen/font_size_16"
                    android:paddingEnd="@dimen/dimen_15"
                    android:textAlignment="textEnd"
                    android:background="@drawable/outline_edittext_change_color_focus"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_price"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/font_size_18"/>

                <EditText
                    android:id="@+id/et_price_of_volume"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:inputType="number"
                    android:textSize="@dimen/font_size_16"
                    android:paddingEnd="@dimen/dimen_15"
                    android:textAlignment="textEnd"
                    android:visibility="visible"
                    android:background="@drawable/outline_edittext_change_color_focus"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_buy_and_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_5"
                android:paddingEnd="@dimen/dimen_5"
                android:paddingVertical="@dimen/dimen_26"
                android:background="@color/white"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_buy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginStart="@dimen/dimen_3"
                        android:layout_marginEnd="@dimen/dimen_4"
                        app:backgroundTint="@color/success"
                        android:background="@drawable/bg_circular"
                        android:hint="BUY"
                        android:textAppearance="@style/bold_16"
                        android:textColorHint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="Avail.Balance: $5 000.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_sell"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginStart="@dimen/dimen_4"
                        android:layout_marginEnd="@dimen/dimen_3"
                        android:background="@drawable/bg_circular"
                        app:backgroundTint="@color/main_red"
                        android:hint="SELL"
                        android:textAppearance="@style/bold_16"
                        android:textColorHint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="UT: 0"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>