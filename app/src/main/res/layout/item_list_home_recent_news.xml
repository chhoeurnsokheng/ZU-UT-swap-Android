<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_12"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_news_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="@dimen/dimen_80"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/popular_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_12"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title_project"
                        android:layout_width="@dimen/dimen_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:text="Laoka, Mondulkiri Land Plot Special Price"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_222222" />

                    <TextView
                        android:id="@+id/news_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:layout_marginEnd="@dimen/dimen_4"
                        android:layout_marginBottom="@dimen/dimen_4"
                        android:text="1-April-2022"
                        android:textAppearance="@style/medium_12"
                        android:textColor="@color/black_333333" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/light_gray" />

    </LinearLayout>

</layout>