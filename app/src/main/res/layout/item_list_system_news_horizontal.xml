<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center"
        android:orientation="vertical"
        android:tag="layout/item_list_project_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_64"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/popular_1" />
                    <TextView
                        android:textSize="14dp"
                        android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Techo International Airport"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/iv_image"/>
                    <TextView
                        android:textSize="12dp"
                        android:id="@+id/txt_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Techo International Airport has so far raised in total USD 97 Million fund from several banks in Cambodia to support its construction from the bonds it has issued."
                        android:lines="3"
                        android:layout_toRightOf="@+id/iv_image"
                        android:layout_below="@+id/txt_title"/>
                </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>