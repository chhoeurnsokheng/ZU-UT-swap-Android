<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screens.kyc.kycFragment.fundPasswordScreen.FundPasswordFragment">

        <EditText
            android:id="@+id/edit_fund_password"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edit_confirm_fund_password"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:padding="@dimen/dimen_14"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/color_main" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tool_bar"
                android:orientation="vertical">
                <!--            <ScrollView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:scrollbars="none"-->
                <!--                android:overScrollMode="never">-->
                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="vertical">-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:gravity="center"
                    android:text="@string/enter_fund_password"
                    android:textAppearance="@style/bold_20"
                    android:textColor="@color/color_main" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:gravity="center"
                    android:text="@string/_4_digit_number"
                    android:textAppearance="@style/regular_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/number_verification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_10">

                        <TextView
                            android:id="@+id/text_view_1"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_2"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_marginStart="@dimen/dimen_15"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_3"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_marginStart="@dimen/dimen_15"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_4"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_marginStart="@dimen/dimen_15"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_show_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:src="@drawable/ic_baseline_visibility_off_24" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:gravity="center"
                    android:text="@string/confirm_4_digit_number"
                    android:textAppearance="@style/regular_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/confirm_number_verification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_10">

                        <TextView
                            android:id="@+id/text_view_confirm_1"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_confirm_2"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_marginStart="@dimen/dimen_15"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_confirm_3"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_marginStart="@dimen/dimen_15"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_confirm_4"
                            android:layout_width="@dimen/dimen_35"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_marginStart="@dimen/dimen_15"
                            android:background="@drawable/bg_border_bottom"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="@style/bold_22"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_show_confirm_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:src="@drawable/ic_baseline_visibility_off_24" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dimen_60"
                    android:text="@string/the_4_digit_password_will_be_used_n_for_transfers_amp_withdrawals"
                    android:textAppearance="@style/regular_10" />


                <!--                </LinearLayout>-->
                <!--            </ScrollView>-->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:background="@drawable/bg_circular"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/next"
                        android:textColor="@color/white"
                        android:textAppearance="@style/bold_18"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:src="@drawable/ic_baseline_arrow_forward_24"
                        app:tint="@color/white" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>
