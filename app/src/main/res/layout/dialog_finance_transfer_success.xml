<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_transfer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/bold_18"
                android:layout_marginVertical="@dimen/dimen_25"
                android:text="@string/transfer_successfully"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/balance_dialog_box"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_balance_dialog"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_80"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_transfer_success" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/dimen_15">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txt_transfer_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textAppearance="@style/bold_24"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/usd"
                                    android:layout_marginStart="@dimen/dimen_5"
                                    android:textAppearance="@style/bold_16"
                                    android:textColor="@color/primary"/>

                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_0A0B12"
                                android:alpha="0.6"
                                android:textAppearance="@style/regular_16"
                                android:text="@string/internal_cash_transfer" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:layout_marginHorizontal="@dimen/dimen_5"
                    android:src="@drawable/dash_line"
                    android:layerType="software"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="35"
                            android:text="@string/trx.id"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/gray_888888" />

                        <TextView
                            android:id="@+id/txt_trx_id"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="65"
                            android:gravity="start"
                            android:textAppearance="@style/medium_12"
                            android:textColor="@color/black_0a0b12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="35"
                            android:text="@string/transaction_date"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/gray_888888" />

                        <TextView
                            android:id="@+id/txt_transaction_date"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="65"
                            android:gravity="start"
                            android:textAppearance="@style/medium_12"
                            android:textColor="@color/black_0a0b12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="35"
                            android:text="@string/from_account"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/gray_888888" />

                        <TextView
                            android:id="@+id/txt_from_account"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="65"
                            android:gravity="start"
                            android:textAppearance="@style/medium_12"
                            android:textColor="@color/black_0a0b12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="35"
                            android:text="@string/to_account"
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/gray_888888" />

                        <TextView
                            android:id="@+id/txt_to_account"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:layout_weight="65"
                            android:gravity="start"
                            android:textAppearance="@style/medium_12"
                            android:textColor="@color/black_0a0b12" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_30"
            android:background="@drawable/bg_circular_condition"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textAppearance="@style/bold_18"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>

</layout>