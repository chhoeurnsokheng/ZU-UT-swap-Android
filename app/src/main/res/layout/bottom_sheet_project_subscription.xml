<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_4"
                android:layout_gravity="center"
                android:background="@drawable/btn_bar" />

            <TextView
                android:id="@+id/txt_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:text="@string/Premium_Professional"
                android:textAppearance="@style/medium_24"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/ut_pochentong"
                android:textAppearance="@style/medium_16"
                android:textColor="@color/black_000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_lock_period"
                    android:textAppearance="@style/regular_10"
                    android:textColor="@color/black_000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volume_input"
                    android:textAppearance="@style/regular_12"
                    android:textColor="@color/black_000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_input_volume"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:background="@drawable/outline_subscription"
                        android:backgroundTint="@color/primary"
                        android:inputType="number"
                        android:paddingHorizontal="@dimen/dimen_35"
                        android:singleLine="true"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/regular_14"
                        android:textColor="@color/black_222222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_12"
                        android:text="UT"
                        android:textAppearance="@style/regular_14"
                        android:textColor="@color/dark_gray" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/subscription_price"
                    android:textAppearance="@style/regular_12"
                    android:textColor="@color/black_000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="$"
                        android:textAppearance="@style/medium_12"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:id="@+id/tv_subscript_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_2"
                        android:text="0.00"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black_000000" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_subscript"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginVertical="@dimen/dimen_20"
                android:background="@drawable/bg_circular_condition"
                android:backgroundTint="@color/gray_999999"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/subscribe"
                    android:textAllCaps="true"
                    android:textAppearance="@style/bold_18"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>
