<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lay_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/dimen_64"
                    android:layout_height="@dimen/dimen_64"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/menu"
                    android:padding="@dimen/dimen_16"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/transfer"
                    android:textAlignment="center"
                    android:textAppearance="@style/medium_21"
                    android:textColor="@color/primary" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/withdraw_balance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_header"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100"
                    android:paddingHorizontal="@dimen/dimen_20"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/withdraw"
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/black_000000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/balance"
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/black_000000" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="$6 320.31"
                        android:textAppearance="@style/medium_32"
                        android:textColor="@color/primary" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/light_gray"
                    android:layout_marginBottom="@dimen/dimen_25"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/available"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$6 320.31"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/pending1"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$0.00"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/lock_up"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$100.68"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_transactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_sheet_dialog_popup">

            <LinearLayout
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/deposit_blue_layout"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_4"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_26"
                    android:background="@drawable/deposite_head_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:gravity="center"
                    android:text="@string/payment_amount"
                    android:textAppearance="@style/regular_12"
                    android:textColor="@color/write_ECECEC" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_18"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textAppearance="@style/medium_32"
                        android:textColor="@color/white"
                        android:visibility="visible"/>

                    <EditText
                        android:id="@+id/et_mount_transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/primary"
                        android:cursorVisible="true"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:hint="0.00"
                        android:textColorHint="@color/white"
                        android:minWidth="@dimen/dimen_40"
                        android:singleLine="true"
                        android:text=""
                        android:textAppearance="@style/medium_32"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_14"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_12"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/add_bankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_28"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_receive_phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/receiver_s_phone_number"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray"
                        android:layout_marginBottom="@dimen/dimen_8"/>

                    <RelativeLayout
                        android:id="@+id/add_phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_receive_phone_num"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <EditText
                                android:id="@+id/et_phoneNumber_ScanQR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/dark_gray"
                                android:gravity="center"
                                android:hint="@string/zero"
                                android:textColorHint="@color/light_gray"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:singleLine="true"
                                android:textAppearance="@style/medium_28"
                                android:textColor="@color/black_000000"
                                android:textCursorDrawable="@color/white" />
                        </LinearLayout>

<!--                        <RelativeLayout-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content">-->

<!--                            <LinearLayout-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_alignParentEnd="true"-->
<!--                                android:orientation="vertical">-->

<!--                                <ImageView-->
<!--                                    android:id="@+id/layBackAccount"-->
<!--                                    android:layout_width="@dimen/dimen_24"-->
<!--                                    android:layout_height="@dimen/dimen_24"-->
<!--                                    android:adjustViewBounds="true"-->
<!--                                    android:src="@drawable/ic_baseline_qr_code_scanner_phone_num"-->
<!--                                    app:tint="@color/blur_0E1C6B" />-->

<!--                                <TextView-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="@dimen/dimen_24"-->
<!--                                    android:adjustViewBounds="true"-->
<!--                                    android:gravity="center"-->
<!--                                    android:text="@string/scan_qr"-->
<!--                                    android:textAppearance="@style/medium_10"-->
<!--                                    android:textColor="@color/black_000000" />-->
<!--                            </LinearLayout>-->
<!--                        </RelativeLayout>-->
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/receive_user_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_user_receiving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/next_btn_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/btn_withdraw_payment_amount"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/transfer_"
                        android:textAppearance="@style/medium_16"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>