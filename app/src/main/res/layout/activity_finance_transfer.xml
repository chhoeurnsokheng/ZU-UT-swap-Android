<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lay_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20">

            <include
                android:id="@+id/navbar_fragment_withdraw"
                layout="@layout/fragment_finance_navbar_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/withdraw_balance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/navbar_fragment_withdraw"
                android:layout_marginTop="@dimen/dimen_32"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/transfer_balance"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$6 320.31"
                        android:textAppearance="@style/medium_32"
                        android:textColor="@color/blur_0E1C6B" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/gray_999999" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/available"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$6 320.31"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/pending1"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$0.00"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/lock_up"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$100.68"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dimen_145"
                    android:layout_height="@dimen/dimen_52"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_26"
                    app:cardElevation="@dimen/dimen_8">

                    <LinearLayout
                        android:id="@+id/qrCode_Scanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_10">

                        <ImageView
                            android:layout_width="@dimen/dimen_24"
                            android:layout_height="@dimen/dimen_24"
                            android:src="@drawable/ic_baseline_qr_code_scanner_phonenumber"
                            app:tint="@color/blur_0E1C6B" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:gravity="center"
                            android:text="@string/my_qr_code"
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/blur_0E1C6B" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_transactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_sheet_dialog_popup">

            <LinearLayout
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_112"
                android:background="@drawable/deposit_blue_layout"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_4"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@drawable/deposite_head_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:gravity="center"
                    android:text="@string/transfer_amount"
                    android:textAppearance="@style/regular_12"
                    android:textColor="@color/write_ECECEC" />

                <EditText
                    android:id="@+id/et_mount_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@color/blur_0E1C6B"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textAppearance="@style/medium_32"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/add_bankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_63"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_receive_phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/receiver_s_phone_number"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />

                    <RelativeLayout
                        android:id="@+id/add_phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_receive_phone_num"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <EditText
                                android:id="@+id/et_phoneNumber_ScanQR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/dark_gray"
                                android:gravity="center"
                                android:hint="@string/zero"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:singleLine="true"
                                android:textAppearance="@style/medium_28"
                                android:textColor="@color/black_000000"
                                android:textCursorDrawable="@color/white" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/layBackAccount"
                                    android:layout_width="@dimen/dimen_24"
                                    android:layout_height="@dimen/dimen_24"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_baseline_qr_code_scanner_phone_num"
                                    app:tint="@color/blur_0E1C6B" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dimen_24"
                                    android:adjustViewBounds="true"
                                    android:gravity="center"
                                    android:text="@string/scan_qr"
                                    android:textAppearance="@style/medium_10"
                                    android:textColor="@color/black_000000" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/receive_user_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_user_receiving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/next_btn_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/btn_withdraw_payment_amount"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/transfer_"
                        android:textAppearance="@style/medium_16"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>