<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="@color/color_main_blur">

        <RelativeLayout
            android:id="@+id/lay_fund_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:padding="@dimen/dimen_14"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_50">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="@dimen/dimen_38"
                    android:layout_height="@dimen/dimen_38"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:src="@drawable/ic_fund_key_normal" />

                <TextView
                    android:id="@+id/txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_22"
                    android:text="@string/enter_fund_password"
                    android:textAppearance="@style/medium_18"
                    android:textColor="@color/primary" />

                <LinearLayout
                    android:id="@+id/lay_ping_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:background="@drawable/bg_circular_border"
                        android:backgroundTint="@color/primary" />

                    <View
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:background="@drawable/bg_circular_border"
                        android:backgroundTint="@color/primary" />

                    <View
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:background="@drawable/bg_circular_border"
                        android:backgroundTint="@color/primary" />

                    <View
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:background="@drawable/bg_circular_border"
                        android:backgroundTint="@color/primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/lay_input_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_12"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/number_1"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="1"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/number_4"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="4"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/number_7"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="7"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_12"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/number_2"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="2"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/number_5"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="5"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/number_8"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="8"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/number_0"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="0"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_12"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/number_3"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="3"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/number_6"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="6"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/number_9"
                            style="@style/btn_fund_password"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:alpha="0.3"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="9"
                            android:textAppearance="@style/medium_28"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:id="@+id/remove_number"
                            android:layout_width="@dimen/dimen_82"
                            android:layout_height="@dimen/dimen_82"
                            android:layout_marginBottom="@dimen/dimen_14"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dimen_28"
                                android:layout_height="@dimen/dimen_28"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dimen_2"
                                android:src="@drawable/ic_back_box"
                                app:tint="@color/black_222222" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_main_blur"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pb_sign_in"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/primary" />

            </LinearLayout>
        </RelativeLayout>

    </eightbitlab.com.blurview.BlurView>
</layout>
