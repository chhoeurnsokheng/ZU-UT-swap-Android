<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15">

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="@dimen/dimen_64"
                    android:layout_height="@dimen/dimen_64"
                    android:padding="@dimen/dimen_20"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/menu"
                    android:src="@drawable/ic_bars"
                    app:tint="@color/color_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/lay_notification"
                    android:layout_toEndOf="@+id/img_menu"
                    android:text="@string/project"
                    android:textAlignment="center"
                    android:textAppearance="@style/medium_21"
                    android:textColor="@color/color_main" />
                <RelativeLayout
                    android:id="@+id/lay_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/img_notification"
                        android:layout_width="@dimen/dimen_26"
                        android:layout_height="@dimen/dimen_26"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_notifications_black_24dp"
                        app:tint="@color/color_main"
                        android:contentDescription="@string/notification" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textAppearance="@style/regular_6"
                        android:background="@drawable/bg_circular"
                        android:backgroundTint="@color/red"
                        android:paddingHorizontal="@dimen/dimen_4"
                        android:paddingVertical="@dimen/dimen_2"
                        android:layout_alignEnd="@+id/img_notification"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lay_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/bg_circular_border_search"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_28">
                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:src="@drawable/ic_magnifying_glass"
                    app:tint="@color/light_gray"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/search" />
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_toStartOf="@+id/img_search"
                    android:paddingHorizontal="@dimen/dimen_15"
                    android:textAppearance="@style/medium_14"
                    android:singleLine="true"
                    android:inputType="textVisiblePassword"
                    android:textColor="@color/dark_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20">

                <LinearLayout
                    android:id="@+id/lay_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:paddingHorizontal="@dimen/dimen_20">

                    <ImageView
                        android:id="@+id/view_type"
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_marginEnd="@dimen/dimen_6"
                        android:src="@drawable/ic_grid_view"
                        app:tint="@color/dark_gray" />

                    <TextView
                        android:id="@+id/txt_view_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_4"
                        android:text="Latest"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />

                    <ImageView
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="@dimen/dimen_10"
                        android:src="@drawable/ic_sort_solid"
                        app:tint="@color/gray_999999" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_project"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:scrollbars="none"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/pg_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>
