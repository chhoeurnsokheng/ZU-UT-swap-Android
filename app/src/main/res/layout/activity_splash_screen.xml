<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".module.splashScreen.SplashScreenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:padding="@dimen/dimen_20">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dimen_165"
            android:layout_height="@dimen/dimen_165"
            app:srcCompat="@drawable/ic_ut_swap_log"
            android:layout_centerInParent="true"
            android:contentDescription="@string/logo_ut_swap" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom">

            <TextView
                android:id="@+id/txt_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_8"
                android:text="@string/copyright_2020"
                android:textAppearance="@style/regular_14"
                android:textColor="@color/warning" />

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zillion_united_co_ltd"
                android:textAppearance="@style/regular_14"
                android:textColor="@color/primary" />
        </LinearLayout>
    </RelativeLayout>
</layout>
