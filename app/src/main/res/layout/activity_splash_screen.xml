<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.system.splashScreen.SplashScreenActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dimen_20"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dimen_165"
            android:layout_height="@dimen/dimen_165"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@drawable/ic_ut_swap_logo_vertical"
            android:contentDescription="@string/logo_ut_swap" />
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:padding="@dimen/dimen_30"
            >
            <TextView
                android:id="@+id/txt_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright_2020"
                android:textColor="@color/orange"
                android:layout_marginRight="@dimen/dimen_8"
                android:textAppearance="@style/regular_10"/>
            <TextView
                android:id="@+id/txt_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zillion_united_co_ltd"
                android:textColor="@color/color_main"
                android:textAppearance="@style/regular_10" />
        </LinearLayout>
        <!--    <include-->
        <!--        android:id="@+id/include"-->
        <!--        layout="@layout/activity_copyright"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        tools:layout_editor_absoluteX="20dp"-->
        <!--        tools:layout_editor_absoluteY="20dp" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
