<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/ll_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4"
                android:paddingBottom="@dimen/dimen_4"
                android:layout_toStartOf="@+id/rl_cancel"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_4">

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy"
                        android:textColor="@color/success"
                        android:textAppearance="@style/regular_14"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/txt_ut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/black_222222"
                            android:textAppearance="@style/regular_14"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:text="UT"
                            android:textColor="@color/black_222222"
                            android:textAppearance="@style/regular_14"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01:02:22 PM  24-03-2022"
                        android:textColor="@color/gray_888888"
                        android:textAppearance="@style/regular_12"/>

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$ 19.90"
                        android:textColor="@color/black_222222"
                        android:textAppearance="@style/regular_14"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_cancel"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:gravity="end">

            <LinearLayout
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="match_parent"
                android:background="@color/red_ee1111"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginEnd="-12dp"
                android:layout_marginStart="-12dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_8"
                    android:layout_gravity="center"
                    app:tint="@color/white"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/dimen_3"
                    android:src="@drawable/ic_trash_can_soild"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cancel"
                    android:rotation="-90"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textAppearance="@style/regular_10"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_arrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:visibility="visible"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:tint="@color/white"
                    android:background="@drawable/bg_top_left_bottom_left"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>

            </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_below="@+id/rl_cancel"
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/light_gray"/>

        </RelativeLayout>



    </RelativeLayout>


</layout>
