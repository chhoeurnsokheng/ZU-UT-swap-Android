<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/dimen_64"
                android:layout_height="@dimen/dimen_64"
                android:layout_centerVertical="true"
                android:contentDescription="@string/menu"
                android:padding="@dimen/dimen_20"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/lay_notification"
                android:layout_toEndOf="@+id/img_close"
                android:text="@string/documents"
                android:textAlignment="center"
                android:textAppearance="@style/medium_21"
                android:textColor="@color/color_main" />

            <RelativeLayout
                android:id="@+id/lay_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_18"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="@dimen/dimen_26"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/notification"
                    android:src="@drawable/ic_notifications_black_24dp"
                    app:tint="@color/color_main" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textAppearance="@style/regular_6"
                    android:background="@drawable/bg_circular"
                    android:backgroundTint="@color/red_EE1111"
                    android:paddingHorizontal="@dimen/dimen_4"
                    android:paddingVertical="@dimen/dimen_2"
                    android:layout_alignEnd="@+id/img_notification"/>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:gravity="center_vertical"
                android:textAppearance="@style/medium_14"
                android:textColor="@color/black_000000"
                android:text="@string/terms_and_conditions"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/dimen_8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:gravity="center_vertical"
                android:textAppearance="@style/medium_14"
                android:textColor="@color/black_000000"
                android:text="@string/privacy_policy"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/dimen_8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:gravity="center_vertical"
                android:textAppearance="@style/medium_14"
                android:textColor="@color/black_000000"
                android:text="@string/operational_rules"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/dimen_8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:gravity="center_vertical"
                android:textAppearance="@style/medium_14"
                android:textColor="@color/black_000000"
                android:text="@string/contract"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/dimen_8"/>

        </LinearLayout>

    </LinearLayout>
</layout>