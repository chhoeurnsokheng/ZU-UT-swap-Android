<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/CardViewPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_108"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:src="@drawable/ic_baseline_circle_24"
                        app:tint="@color/simple_green" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:text=""
                        android:textAppearance="@style/medium_16"
                        android:textColor="@color/primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_dollar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text="$"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_222222" />

                    <TextView
                        android:id="@+id/tv_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text=""
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_222222" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/determinateBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_6"
                android:layout_marginBottom="@dimen/dimen_16"
                android:progress="0"
                android:progressBackgroundTint="@color/gray_E7E7E7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_lock_24"
                        app:tint="@color/dark_gray" />

                    <TextView
                        android:id="@+id/tv_day_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text=""
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/gray_707070" />

                    <TextView
                        android:id="@+id/tv_day_lock_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_2"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text="@string/days"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/gray_707070" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ut_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text=""
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_222222" />

                    <TextView
                        android:id="@+id/tv_Div"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_3"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text="/"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_222222" />

                    <TextView
                        android:id="@+id/tv_ut_main_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text=""
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_222222" />

                    <TextView
                        android:id="@+id/tv_ut_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text="UT"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_222222" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/light_gray" />
    </LinearLayout>

</layout>
