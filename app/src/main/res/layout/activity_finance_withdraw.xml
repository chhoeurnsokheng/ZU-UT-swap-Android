<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lay_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20">

            <include
                android:id="@+id/navbar_fragment_withdraw"
                layout="@layout/fragment_finance_navbar_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/withdraw_balance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/navbar_fragment_withdraw"
                android:layout_marginTop="@dimen/dimen_32"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/withdrawal_balance"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$6 320.31"
                        android:textAppearance="@style/medium_32"
                        android:textColor="@color/blur_0E1C6B" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/gray_999999" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/available"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$6 320.31"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/pending1"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$0.00"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/lock_up"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black_000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$100.68"
                        android:textAppearance="@style/regular_16"
                        android:textColor="@color/black_000000" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_transactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone"
            android:alpha="0.4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_sheet_dialog_popup">

            <LinearLayout
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_112"
                android:background="@drawable/deposit_blue_layout"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_4"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@drawable/deposite_head_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:gravity="center"
                    android:text="@string/payment_amount"
                    android:textAppearance="@style/regular_12"
                    android:textColor="@color/write_ECECEC" />

                <EditText
                    android:id="@+id/et_mount_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@color/blur_0E1C6B"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textAppearance="@style/medium_32"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/add_bankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_63"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:background="@drawable/outline_subscription"
                    android:gravity="center"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/layBackAccount"
                            android:layout_width="@dimen/dimen_32"
                            android:layout_height="@dimen/dimen_32"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_baseline_add_circle_finance_withdraw"
                            app:tint="@color/gray_CCCCCC" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_32"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:adjustViewBounds="true"
                            android:gravity="center"
                            android:text="@string/add_bank_account"
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/black_000000" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/receive_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receiving_address"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/titleCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_240"
                        android:gravity="center"
                        android:text="@string/fee_"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/dark_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/aba_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:visibility="gone">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_32"
                        android:layout_height="@dimen/dimen_32"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/dimen_32">

                        <ImageView
                            android:id="@+id/iv_bank"
                            android:layout_width="@dimen/dimen_32"
                            android:layout_height="@dimen/dimen_32"
                            android:scaleType="centerCrop"
                            android:src="@drawable/aba_bank" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_40"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/black_000000" />

                        <TextView
                            android:id="@+id/tv_titleBank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/regular_12"
                            android:textColor="@color/dark_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dimen_60"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$5"
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/black_000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:text="or"
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/black_000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:text="1.25%"
                            android:textAppearance="@style/medium_14"
                            android:textColor="@color/black_000000" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/next_btn_finace"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/btn_withdraw_payment_amount"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/withdraw"
                        android:textAppearance="@style/medium_16"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>