<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.wallet.MyWallet.MyWalletActivity"
        android:background="@color/color_main"
        android:alpha="0.92">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_5"
                android:src="@drawable/ic_angles_left_regular"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btn_qrcode"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/btn_notification"
                android:background="@drawable/ic_barcode_read_regular"
                android:backgroundTint="@color/white" />

            <ImageButton
                android:id="@+id/btn_notification"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_bell_regular"
                android:backgroundTint="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:paddingTop="15dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Balance"
                    android:textSize="@dimen/font_size_18"
                    android:fontFamily="@font/avenirnextcy_medium"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 1000.00"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/img_drop_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:tint="@color/white"
                    android:layout_marginTop="@dimen/dimen_15"/>

                <LinearLayout
                    android:id="@+id/linear_all_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_40"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenirnextcy_regular"
                            android:text="Available:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Lock-up:"
                            android:fontFamily="@font/avenirnextcy_regular"
                            android:layout_marginTop="@dimen/dimen_10"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenirnextcy_regular"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:text="Pending:"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_40"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenirnextcy_regular"
                            android:text="$ 1000.00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="$ 1000.00"
                            android:fontFamily="@font/avenirnextcy_regular"
                            android:layout_marginTop="@dimen/dimen_10"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenirnextcy_regular"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:text="$ 1000.00"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        app:cardCornerRadius="@dimen/dimen_30">

                        <ImageView
                            android:id="@+id/img_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share_regular"
                            android:padding="@dimen/dimen_10"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deposit"
                        android:fontFamily="@font/avenirnextcy_medium"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textSize="@dimen/font_size_12"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dimen_15">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        app:cardCornerRadius="@dimen/dimen_30">

                        <ImageView
                            android:id="@+id/img_withdrawal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_reply_regular"
                            android:padding="@dimen/dimen_10"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw"
                        android:fontFamily="@font/avenirnextcy_medium"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textSize="@dimen/font_size_12"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dimen_15">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        app:cardCornerRadius="@dimen/dimen_30">

                        <ImageView
                            android:id="@+id/img_transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_paper_plane_regular"
                            android:padding="@dimen/dimen_10"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfer_capital_letter"
                        android:fontFamily="@font/avenirnextcy_medium"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textSize="@dimen/font_size_12"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dimen_18">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        app:cardCornerRadius="@dimen/dimen_30">

                        <ImageView
                            android:id="@+id/img_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_more_horiz_24"
                            app:tint="@color/black"
                            android:padding="@dimen/dimen_10"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"
                        android:fontFamily="@font/avenirnextcy_medium"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textSize="@dimen/font_size_12"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_whtie_border_top"
                android:backgroundTint="@color/gray"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/view_txt_wallet_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/txt_wallet_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="@string/transaction"
                        android:fontFamily="@font/avenirnextcy_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgFilter"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_filter_list_24"/>

                    <ImageView
                        android:id="@+id/imgExport"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_logout_24"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>