<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="Please verify your account"/>

        <LinearLayout
            android:id="@+id/linear_transactions_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_filter_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/img_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_filter"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:src="@drawable/ic_filter"
                        app:tint="@color/backgroundHint" />

                    <TextView
                        android:id="@+id/txt_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_6"
                        android:text="@string/filter_"
                        android:textAppearance="@style/regular_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ic_sort"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_sort"
                        app:tint="@color/backgroundHint" />

                    <TextView
                        android:id="@+id/txt_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_6"
                        android:text="@string/sort"
                        android:textAppearance="@style/regular_14"  />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_container_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_all"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:background="@drawable/bg_circular">

                    <TextView
                        android:id="@+id/txt_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ALL"
                        android:textColor="@color/white"
                        android:textAppearance="@style/regular_14"  />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_buy"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:background="@drawable/bg_border_green_correct">

                    <TextView
                        android:id="@+id/txt_buy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="BUY"
                        android:textColor="@color/success"
                        android:textAppearance="@style/regular_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_sell"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:background="@drawable/bg_border_red_transparent">

                    <TextView
                        android:id="@+id/txt_sell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SELL"
                        android:textColor="@color/main_red"
                        android:textAppearance="@style/regular_14"/>
                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linear_container_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_latest"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:background="@drawable/bg_circular">

                        <TextView
                            android:id="@+id/txt_latest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Latest"
                            android:textColor="@color/white"
                            android:textAppearance="@style/regular_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_oldest"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:background="@drawable/bg_circular_border_blue">

                        <TextView
                            android:id="@+id/txt_oldest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Oldest"
                            android:textColor="@color/color_main"
                            android:textAppearance="@style/regular_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_small_to_big"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:background="@drawable/bg_circular_border_blue">

                        <TextView
                            android:id="@+id/txt_small_to_big"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="$$$ -> $"
                            android:textColor="@color/color_main"
                            android:textAppearance="@style/regular_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_big_to_small"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:background="@drawable/bg_circular_border_blue">

                        <TextView
                            android:id="@+id/txt_big_to_small"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="$ -> $$$"
                            android:textColor="@color/color_main"
                            android:textAppearance="@style/regular_14" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/dimen_10"
                android:overScrollMode="never"/>

        </LinearLayout>

    </LinearLayout>
</layout>