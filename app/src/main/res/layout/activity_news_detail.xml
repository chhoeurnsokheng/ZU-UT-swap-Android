<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_no_int"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <include
            android:id="@+id/includeLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/appbar_layout"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/image_one"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/black_000000"
                        android:textAppearance="@style/medium_20"
                        android:layout_marginBottom="@dimen/dimen_12"
                        android:text="Laoka, Mondulkiri Land Plot Special Price"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/primary"
                        android:layout_marginBottom="@dimen/dimen_12"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11 April 2022"
                        android:textColor="@color/black_000000"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:textAppearance="@style/regular_12"/>

                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/content_loading"
                        android:textColor="@color/black_333333"
                        android:textAppearance="@style/regular_14"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>