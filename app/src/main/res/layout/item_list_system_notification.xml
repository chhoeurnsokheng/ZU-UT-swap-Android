<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_8"
        android:id="@+id/linear_container">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subscription"
            android:textAppearance="@style/medium_14"
            android:layout_marginBottom="@dimen/dimen_8"
            android:textColor="@color/black_000000"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8"
            android:maxLines="3"
            android:textColor="@color/black_333333"
            android:textAppearance="@style/regular_12"
            android:text="You have successfully subscribed to UT Pochentong 555..."/>

        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 hr(s) ago"
            android:layout_marginBottom="@dimen/dimen_8"
            android:textAppearance="@style/regular_10"
            android:textColor="@color/dark_gray"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/light_gray"/>

    </LinearLayout>
</layout>