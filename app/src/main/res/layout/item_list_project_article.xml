<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:tag="layout/item_article_project_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_layout"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_location_dot_regular"
                android:layout_centerVertical="true" app:tint="@color/gray"/>
            <TextView
                android:textSize="15dp"
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/project"
                android:layout_toRightOf="@+id/iv_icon"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_icon"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:textSize="15dp"
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memang Commune Kaev Seima District Mondul Kiri Province"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="?android:attr/listDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
</layout>