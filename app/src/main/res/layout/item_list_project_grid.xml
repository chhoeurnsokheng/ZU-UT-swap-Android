<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_20"
            android:elevation="@dimen/dimen_16"
            app:cardCornerRadius="@dimen/dimen_8"
            app:cardElevation="@dimen/dimen_8">

            <LinearLayout
                android:id="@+id/linear_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_116"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/popular_1" />

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/image_view"
                        android:background="@color/warning"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dimen_10"
                        android:paddingVertical="@dimen/dimen_4"
                        android:text="Upcoming"
                        android:textAppearance="@style/medium_10"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/title_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:singleLine="true"
                    android:text="Pochentong 555"
                    android:textAppearance="@style/medium_12"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:singleLine="true"
                    android:text="Flipping Strategy"
                    android:textAppearance="@style/regular_10"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/public_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:singleLine="true"
                    android:text="1/1/2022"
                    android:textAppearance="@style/medium_12"
                    android:textColor="@color/primary"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>