<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.security.securityFragment.signInScreen.SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:padding="@dimen/dimen_14"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/color_main" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_15">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_36"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_14"
                    android:text="@string/sign_in"
                    android:textAppearance="@style/bold_32"
                    android:textColor="@color/color_main" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:text="@string/enter_account_details"
                    android:textAppearance="@style/medium_20"
                    android:textColor="@color/color_main" />

                <EditText
                    android:id="@+id/textInputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:hint="@string/email_or_phone_number"
                    android:inputType="text"
                    android:paddingBottom="@dimen/dimen_25"
                    android:textAppearance="@style/regular_16" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20">

                    <EditText
                        android:id="@+id/textInputPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingEnd="@dimen/dimen_50"
                        android:paddingBottom="@dimen/dimen_25"
                        android:singleLine="true"
                        android:textAppearance="@style/regular_16" />

                    <ImageView
                        android:id="@+id/show_pass_btn"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dimen_6"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:alpha=".5"
                        android:padding="@dimen/dimen_5"
                        android:src="@drawable/ic_baseline_visibility_24" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_10">

                <TextView
                    android:id="@+id/txt_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/lay_sign_in"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@color/main_red"
                    android:paddingVertical="@dimen/dimen_8"
                    android:text="@string/invalid_login_or_password"
                    android:textAlignment="center"
                    android:textAppearance="@style/regular_14"
                    android:textColor="@color/white"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/main_Wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageWifi"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:text=""
                        android:textAppearance="@style/regular_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_signIn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="@drawable/bg_circular"
                        android:hint="@string/sign_in"
                        android:textAppearance="@style/bold_18"
                        android:textColorHint="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/btn_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/register_btn"
                            android:paddingHorizontal="@dimen/dimen_8"
                            android:paddingVertical="@dimen/dimen_12"
                            android:textAppearance="@style/regular_14"
                            android:textColor="@color/color_main" />

                        <TextView
                            android:id="@+id/btn_forgot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingHorizontal="@dimen/dimen_8"
                            android:paddingVertical="@dimen/dimen_12"
                            android:text="@string/forgot_password_btn"
                            android:textAppearance="@style/regular_14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</layout>