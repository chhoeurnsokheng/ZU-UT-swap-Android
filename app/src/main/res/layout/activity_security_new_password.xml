<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_15"
        android:paddingEnd="@dimen/dimen_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main"
                android:layout_marginTop="@dimen/dimen_15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_a_new_password"
                android:textColor="@color/color_main"
               android:textAppearance="@style/medium_20"
                android:layout_marginTop="@dimen/dimen_50"
              />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20">

                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingBottom="@dimen/dimen_25"
                    android:textAppearance="@style/regular_16" />

                <ImageView
                    android:id="@+id/show_pass_btn"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:alpha=".5"
                    android:onClick="ShowHidePassword"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/ic_baseline_visibility_24"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                >

                <EditText
                    android:id="@+id/inputConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/dimen_25"
                    android:textAppearance="@style/regular_16" />

                <ImageView
                    android:id="@+id/show_confirm_pass_btn"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:alpha=".5"
                    android:onClick="ShowHidePassConfirmPassword"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/ic_baseline_visibility_24"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_error_password_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lay_sign_in"
                android:layout_marginTop="@dimen/dimen_50"
                android:background="@color/main_red"
                android:paddingVertical="@dimen/dimen_8"
                android:text="Password Not matching"
                android:textAlignment="center"
                android:textAppearance="@style/regular_14"
                android:textColor="@color/white"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/bg_circular"
                android:layout_marginBottom="@dimen/dimen_20"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                   android:textAppearance="@style/bold_18"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    android:layout_marginStart="@dimen/dimen_5"
                    app:tint="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
