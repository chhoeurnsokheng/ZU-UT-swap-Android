<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="9">

                <ImageView
                    android:id="@+id/image_subscription"
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="@dimen/dimen_26"
                    android:src="@drawable/ic_locked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="91"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_subscription"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_weight="70"
                        android:layout_height="wrap_content"
                        android:text="UT Kampot"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/amount_subscription"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="end"
                        android:text="$400.00"
                        android:textAppearance="@style/medium_12"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_subscription"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_weight="70"
                        android:layout_height="wrap_content"
                        android:text="19-May-2022"
                        android:textAppearance="@style/regular_10"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/status_days"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="end"
                        android:text="30 day(s) left"
                        android:textAppearance="@style/regular_10"
                        android:textColor="@color/dark_gray" />

                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/light_white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>