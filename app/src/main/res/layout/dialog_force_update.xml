<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/dimen_10">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_24"
                android:paddingHorizontal="@dimen/dimen_24"
                android:paddingBottom="@dimen/dimen_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:src="@drawable/ic_exclamation_mark_red"
                    app:tint="@color/danger"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/medium_14"
                    android:textColor="@color/black_333333"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:text="@string/new_version_available"
                    android:layout_marginBottom="@dimen/dimen_32"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/regular_10"
                    android:textColor="@color/black_333333"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:text="@string/look_like_you_have_an_older_version_of_the_app_please_update_to_get_latest_features_and_best_experience"
                    android:layout_marginBottom="@dimen/dimen_32"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_now"
                    android:gravity="center"
                    android:textAppearance="@style/regular_14"
                    android:textColor="@color/primary"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
