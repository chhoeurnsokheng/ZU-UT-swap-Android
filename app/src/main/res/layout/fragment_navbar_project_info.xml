<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/color_main" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subscript_trade"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_36"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_circular"
                    android:gravity="center"
                    android:hint="@string/subscribe"
                    android:paddingHorizontal="@dimen/dimen_24"
                    android:textAppearance="@style/regular_14"
                    android:textColorHint="@color/white"
                    app:backgroundTint="@color/color_main" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txt_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:text="UT Siem Reap 17140"
                android:textAppearance="@style/medium_20"
                android:textColor="@color/black" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_25"
                android:layout_marginBottom="@dimen/dimen_25">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200"
                    app:iss_auto_cycle="true"
                    app:iss_delay="1000"
                    app:iss_period="1000" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_project_info_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_map"
                        android:layout_marginRight="@dimen/dimen_5"
                        app:tint="@color/color_main" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="View in Google Maps"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/color_main" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_50"
                android:gravity="center"
                android:text="@string/investment_information"
                android:textAppearance="@style/regular_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invest_ut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:text="@string/UT"
                    android:textAppearance="@style/regular_16"
                    android:textColor="@color/color_main" />

                <TextView
                    android:id="@+id/invest_value"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_3"
                    android:layout_weight="40"
                    android:gravity="center"
                    android:text="@string/value"
                    android:textAppearance="@style/regular_16"
                    android:textColor="@color/color_main" />

                <TextView
                    android:id="@+id/invest_sqm"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_3"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:text="@string/sqm"
                    android:textAppearance="@style/regular_16"
                    android:textColor="@color/color_main" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen_5"
                android:background="@color/light_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_project_investment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_25"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_circle_24"
                            app:tint="@color/light_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:gravity="center"
                            android:text="@string/base_price"
                            android:textAppearance="@style/regular_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_circle_24"
                            app:tint="@color/orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:gravity="center"
                            android:text="@string/target_selling_price"
                            android:textAppearance="@style/regular_14" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center|right"
                    android:text="17% Minimum \n Expected Return"
                    android:textAppearance="@style/medium_16"
                    android:textColor="@color/color_main" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_term_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Term &amp; Condition"
                    android:textAppearance="@style/regular_16"
                    android:textColor="@color/color_main" />

                <ImageView
                    android:id="@+id/arrow_down_term_condition"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:tint="@color/color_main" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/txt_term_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/regular_14"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_10"
                android:text=""
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layout_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/documents"
                    android:textAppearance="@style/regular_16"
                    android:textColor="@color/color_main" />

                <ImageView
                    android:id="@+id/arrow_down_document"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:tint="@color/color_main" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/pdf_document"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_60"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_picture_as_pdf_24"
                        app:tint="@color/color_main" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/regular_16"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:text="@string/sales_and_purchase_agreement" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_picture_as_pdf_24"
                        app:tint="@color/color_main" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/regular_16"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:text="@string/property_title" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_picture_as_pdf_24"
                        app:tint="@color/color_main" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/regular_16"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:text="@string/analysis" />

                </LinearLayout>
            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/dimen_80" />-->

        </LinearLayout>
    </ScrollView>
</layout>
