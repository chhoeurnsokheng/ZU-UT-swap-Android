<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dimen_10">

        <LinearLayout
            android:id="@+id/linear_buy_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="9">

                <ImageView
                    android:id="@+id/image_balance"
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="@dimen/dimen_26"
                    android:src="@drawable/ic_locked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="91"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:text="UT Kampot"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_weight="40"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$400.00"
                        android:textAppearance="@style/medium_12"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_date_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19-May-2022"
                            android:textAppearance="@style/regular_10"
                            android:textColor="@color/dark_gray" />

                        <ImageView
                            android:layout_width="@dimen/dimen_10"
                            android:layout_height="@dimen/dimen_10"
                            android:layout_marginHorizontal="@dimen/dimen_5"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_right_long"
                            app:tint="@color/dark_gray" />

                        <TextView
                            android:id="@+id/txt_date_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19-May-2022"
                            android:textAppearance="@style/regular_10"
                            android:textColor="@color/dark_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="30 day(s) left"
                            android:textAppearance="@style/regular_10"
                            android:textColor="@color/dark_gray" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/light_white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>