<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dimen_36"
                android:layout_height="@dimen/dimen_4"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/btn_bar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/dimen_20"
                android:text="@string/select_date_range"
                android:textAppearance="@style/regular_12"
                android:textColor="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dimen_20">

                <LinearLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_weight="45"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="@drawable/bg_seleted_date"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="@string/hint_date"
                        android:importantForAutofill="no"
                        android:inputType="none"
                        android:singleLine="true"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/primary"
                        android:textColorHint="@color/primary"
                        tools:ignore="TextFields" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to"
                        android:textColor="@color/black"
                        android:textAppearance="@style/regular_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_weight="45"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="@drawable/bg_seleted_date"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="@string/hint_date"
                        android:importantForAutofill="no"
                        android:inputType="none"
                        android:singleLine="true"
                        android:textAppearance="@style/medium_14"
                        android:textColor="@color/primary"
                        android:textColorHint="@color/light_gray"
                        tools:ignore="TextFields" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</layout>