<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.setting.kycScreen.verificationScreen.FundPasswordActivity">

        <LinearLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_15">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_5"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_ut_swap"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_ut_swap_logo_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/avenirnextcy_medium"
                android:gravity="center"
                android:text="@string/enter_fund_password"
                android:textColor="@color/color_main"
                android:textSize="@dimen/font_size_20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/avenirnextcy_regular"
                android:gravity="center"
                android:text="@string/_4_digit_number"
                android:textSize="@dimen/font_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_box_1"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_50"
                        android:background="@drawable/bg_corner"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="yes"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:nextFocusForward="@id/edit_box_2"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_box_2"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_corner"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="yes"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:nextFocusForward="@id/edit_box_3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_box_3"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_corner"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:nextFocusForward="@id/edit_box_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_box_4"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:background="@drawable/bg_corner"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:nextFocusForward="@id/edit_box_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/avenirnextcy_regular"
                android:gravity="center"
                android:text="@string/_4_digit_number"
                android:textSize="@dimen/font_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_box_confirm_1"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@drawable/bg_corner"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:nextFocusForward="@id/edit_box_2"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_22"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_box_confirm_2"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:background="@drawable/bg_corner"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:nextFocusForward="@id/edit_box_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_22"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_box_confirm_3"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:background="@drawable/bg_corner"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:nextFocusForward="@id/edit_box_4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_22"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_box_confirm_4"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:background="@drawable/bg_corner"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:nextFocusForward="@id/edit_box_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_22"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_show_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_30"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dimen_60"
                android:text="@string/this_4_digit_password_will_be_used_for_transfers_withdrawals" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@drawable/bg_circular"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/avenirnextcyr_bold"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:tint="@color/white" />

        </LinearLayout>

    </RelativeLayout>
</layout>