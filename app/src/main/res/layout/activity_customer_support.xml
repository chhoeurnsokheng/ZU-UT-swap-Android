<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/dimen_64"
                android:layout_height="@dimen/dimen_64"
                android:layout_centerVertical="true"
                android:contentDescription="@string/menu"
                android:padding="@dimen/dimen_16"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/color_main" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/lay_notification"
                android:layout_toEndOf="@+id/img_close"
                android:text="@string/customer_support"
                android:textAlignment="center"
                android:textAppearance="@style/medium_21"
                android:textColor="@color/color_main" />

            <RelativeLayout
                android:id="@+id/lay_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_18"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="@dimen/dimen_26"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/notification"
                    android:src="@drawable/ic_notifications_black_24dp"
                    app:tint="@color/color_main" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textAppearance="@style/regular_6"
                    android:background="@drawable/bg_circular"
                    android:backgroundTint="@color/red_EE1111"
                    android:paddingHorizontal="@dimen/dimen_4"
                    android:paddingVertical="@dimen/dimen_2"
                    android:layout_alignEnd="@+id/img_notification"/>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginBottom="@dimen/dimen_30"
                android:src="@drawable/ic_telephone"
                app:tint="@color/blur_0E1C6B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16"
                android:text="@string/need_help"
                android:textAppearance="@style/medium_21"
                android:textColor="@color/black_000000" />

            <TextView
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/please_feel_free..."
                android:textAppearance="@style/medium_14"
                android:textColor="@color/black_000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_30"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_telegram"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/bg_circular_condition"
                android:backgroundTint="@color/blue_sky"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_18"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_18"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:src="@drawable/ic_telegram_logo_paper_plane"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/telegram"
                    android:textAllCaps="true"
                    android:textAppearance="@style/medium_16"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_call_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/bg_circular_condition"
                android:backgroundTint="@color/simple_green"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:src="@drawable/ic_telephone"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/call_us"
                    android:textAllCaps="true"
                    android:textAppearance="@style/medium_16"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>