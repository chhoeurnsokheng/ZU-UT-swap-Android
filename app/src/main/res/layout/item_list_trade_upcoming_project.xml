<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5">

        <RelativeLayout
            android:id="@+id/linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_result"/>

            <LinearLayout
                android:id="@+id/lay_upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_5"
                android:paddingVertical="@dimen/dimen_10">

                <TextView
                    android:id="@+id/txt_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="43"
                    android:singleLine="true"
                    android:text="UT Pochentong 555"
                    android:textAppearance="@style/medium_14"
                    android:textColor="@color/black_222222" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="57"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_32"
                        android:layout_marginEnd="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:background="@drawable/bg_circular_border_blue"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        android:text="@string/details"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/txt_subscribe"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_32"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:background="@drawable/bg_circular"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        android:text="@string/subscribe"
                        android:textAppearance="@style/regular_12"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/lay_upcoming"
                android:background="@color/light_gray" />
        </RelativeLayout>

    </LinearLayout>
</layout>