<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:tag="layout/activity_project_detail_0"
    android:background="@color/bg_color"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/lay_title"
        android:background="@drawable/btn_bg"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">
        <ImageView
            android:id="@+id/iv_back"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_angles_left_regular"
            android:contentDescription="@string/back"
            app:tint="@color/color_main"/>
        <TextView
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/color_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Detail"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/lay_description"
        android:background="@drawable/btn_bg"
        android:padding="@dimen/dimen_15"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15"
        android:layout_above="@+id/lay_button"
        android:layout_below="@+id/lay_title"
        android:overScrollMode="never"
        android:backgroundTint="@color/white">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_period="1000"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_article_project"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_10">
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Co-investment Scheme"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Land Size: 17 140 sqm"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - UT Issued: 1 000 000 UT"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Fund Raised: $645 000.00"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - 1 UT = $0.66 ($37.00/sqm)"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10">
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use of Fund"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Co-investment amount of $ 645,000 (1,000,000 UT) is for the funding the purchase of land for reselling purpose."/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10">
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Performance"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NO guaranteed return on investment. The performance will be generated by the reselling strategy."/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10">
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Example"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - With projected annual price rise of the property: 13%"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Current Property Price: $645 000.00 = $0.66/UT"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Target Selling Price: $728 850 = $0.75/UT"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - 1 UT = $0.66 ($37.00/sqm)"/>
            </LinearLayout>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:text="Minimum Return 13%"
                android:layout_toLeftOf="@+id/dummyView"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_marginEnd="10dp"
                android:paddingVertical="@dimen/dimen_8" app:backgroundTint="@color/color_main"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10">
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms &amp; Conditions"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Locked-up period of 45 days is applicable on all UTs bought on discount."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. NO guaranteed rate of return on investment; Rate of return is variable depending on the deal closing price."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. NO guarantee on the duration to when the deal can be closed."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. NO contract for the sale and purchase of UT. The transaction report testifies your economic benefit.  "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Right to the decision on the sale of land belongs to Trading Committee. The SPA will testify the selling price to the third party. This price will be the delisting price of all UT."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. UT will be sold and bought back via digital trading platform only. Once 80% of the UT are collected by the company, the remaining 20% will be automatically exchanged at the delisting price."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Trading is open 7/7 on UTSWAP Platform from 9 am – 4 pm.  "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. The transaction fee per transaction is 0.3% of traded value. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9. Minimum investment is 1 UT."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10. Failure to comply with our terms and conditions results in penalty of 100% of the violated transaction value in addition to account freezing."/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/lay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:background="@drawable/btn_bg"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">
            <TextView
                android:id="@+id/dummyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/btn_subscribe"
                android:background="@drawable/btn_bg"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_8"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscribe"
                android:layout_toLeftOf="@+id/dummyView"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_marginEnd="10dp"
                android:paddingVertical="@dimen/dimen_8" app:backgroundTint="@null"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/btn_trade"
                android:background="@drawable/btn_bg"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_8"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trade"
                android:layout_toRightOf="@+id/dummyView"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:paddingVertical="@dimen/dimen_8" app:backgroundTint="@null"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</layout>