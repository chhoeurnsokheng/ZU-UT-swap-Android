<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_investment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="32"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen_8">

            <TextView
                android:id="@+id/ic_dollar"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="bottom"
                android:text="$"
                android:textAppearance="@style/bold_14" />

            <TextView
                android:id="@+id/txt_per_ut"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_5"
                android:layout_weight="80"
                android:gravity="right"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_2"
                android:text="3.90"
                android:textAppearance="@style/bold_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_weight="36"
            android:gravity="bottom"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/txt_value_ut"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_8"
                android:layout_weight="95"
                android:gravity="center_horizontal|bottom"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_2"
                android:text="858 000"
                android:textAppearance="@style/bold_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="32"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen_8">

            <TextView
                android:id="@+id/ic_dollar2"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="$"
                android:textAppearance="@style/bold_14" />

            <TextView
                android:id="@+id/txt_sqm_ut"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:gravity="right"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_2"
                android:text="1 546"
                android:textAppearance="@style/bold_14" />

        </LinearLayout>

    </LinearLayout>
</layout>
