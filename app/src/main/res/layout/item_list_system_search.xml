<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/dimen_10"
        android:paddingHorizontal="@dimen/dimen_5">
        <ImageView
            android:id="@+id/icon_history"
            android:layout_width="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_15"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_clock_rotate_left_regular"
            app:tint="@color/secondary_text" />

        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_xmark_regular"
            app:tint="@color/secondary_text" />

        <TextView
            android:id="@+id/txt_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:layout_toLeftOf="@id/icon_delete"
            android:layout_toRightOf="@id/icon_history"
            android:inputType="textVisiblePassword"
            android:singleLine="true"
            android:text="History Search"
            android:textAppearance="@style/regular_14"
            android:textColor="@color/secondary_text" />
    </RelativeLayout>
</layout>
