<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".UTSwapApp"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTSwapApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <!--            android:allowTaskReparenting="false"-->
        <!--            android:excludeFromRecents="true"-->
        <!--            android:launchMode="singleTask"-->
        <!--            android:permission="android.permission.USE_SIP"-->
        <!--            android:taskAffinity=""-->
        <activity
            android:name="com.zillennium.utswap.screens.system.splashScreen.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zillennium.utswap.screens.navbar.navbar.NavbarActivity"
            android:exported="false"
            android:label="@string/home"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustNothing"/>

        <!--Activity KYC-->
        <activity
            android:name="com.zillennium.utswap.screens.kyc.kycActivity.KYCActivity"
            android:exported="false"
            android:label="@string/KYC"
            android:screenOrientation="portrait" />
        <!--End Activity KYC-->

        <!--Activity Finance-->
        <activity
            android:name="com.zillennium.utswap.screens.finance.balanceActivity.FinanceBalanceActivity"
            android:exported="false"
            android:label="@string/finance"
            android:screenOrientation="portrait" />
        <!--End Activity Finance-->

        <!--Activity Security-->
        <activity
            android:name="com.zillennium.utswap.screens.security.securityActivity.registerScreen.RegisterActivity"
            android:exported="false"
            android:label="@string/register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="com.zillennium.utswap.screens.security.securityActivity.signInScreen.SignInActivity"
            android:exported="false"
            android:label="@string/sign_in"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="com.zillennium.utswap.screens.security.securityActivity.resetPasswordScreen.ResetPasswordActivity"
            android:exported="false"
            android:label="@string/reset_password"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <!--End Activity Security-->

        <!--Activity System-->
        <activity
            android:name="com.zillennium.utswap.screens.system.welcomeScreen.WelcomeActivity"
            android:exported="false"
            android:label="@string/welcome"
            android:screenOrientation="portrait"/>


        <!--  Activity Finance    -->
        <activity android:name=".screens.finance.depositActivity.DepositActivity"
            android:exported="false"
            android:label="@string/deposit"
            android:screenOrientation="portrait"/>
        <!--End Activity System-->

        <!--Activity Project-->
        <activity
            android:name="com.zillennium.utswap.screens.navbar.projectTab.projectInfoScreen.ProjectInfoActivity"
            android:exported="false"
            android:label="@string/project_info"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zillennium.utswap.screens.navbar.projectTab.subscriptionScreen.SubscriptionActivity"
            android:exported="false"
            android:label="@string/subscription"
            android:screenOrientation="portrait" />
        <!--End Activity Project-->

        <!--Activity Trade-->
        <activity
            android:name="com.zillennium.utswap.screens.navbar.tradeTab.tradeExchangeScreen.TradeExchangeActivity"
            android:exported="false"
            android:label="@string/trade_exchange"
            android:screenOrientation="portrait" />
        <!--End Activity Trade-->

        <activity android:name=".screens.finance.depositActivity.addCard.DepositAddCardActivity"
            android:exported="false"
            android:label="@string/deposit"
            android:screenOrientation="portrait"/>
    </application>

</manifest>